@model IEnumerable<ProductViewModel>

<h4 class="mb-3 text-center">Recommended products</h4>
<div class="card-deck">
    @foreach (var product in Model)
    {
        <div class="card">
            <img class="card-img-top p-4 img-fluid" src="@product.ImageDataUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Price</p>
                <a href="#" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>