@model EmailMessageFormViewModel

@{
    ViewData["Title"] = "Ask question";
    Layout = "~/Views/Shared/Layouts/_AccountPanelLayout.cshtml";
}

<form asp-controller="Account" asp-action="AskQuestion" class="w-100 w-lg-50" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control input-with-green-outline-on-focus" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control input-with-green-outline-on-focus"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-green float-right input-with-green-outline-on-focus" />
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}