@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h3 class="text-uppercase">My account</h3>
<hr class="account-panel-horizontal-line" />
<div class="row">
    <div class="col-3">
        <ul class="list-unstyled">
            <li><a href="#" class="account-panel-link text-uppercase">My orders</a></li>
            <li><a href="#" class="account-panel-link text-uppercase active-account-panel-link">My data</a></li>
            <li><a href="#" class="account-panel-link text-uppercase">Change password</a></li>
            <li><a href="#" class="account-panel-link text-uppercase">Logout</a></li>
        </ul>
    </div>
    <div class="col-9">
        <form asp-controller="Account" asp-action="ChangePassword" method="post" class="form-horizontal" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group w-50">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group w-50">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group w-50">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-green">Update data</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
