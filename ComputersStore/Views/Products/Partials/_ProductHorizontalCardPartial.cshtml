@model ProductViewModel

<div class="card p-2 mb-3">
    <div class="row no-gutters">
        <div class="col-12 col-md-2 p-2">
            <img class="card-img-top img-fluid product-card-img-top" src="@Model.ImageDataUrl" />
        </div>
        <div class="col-12 col-md-8">
            <div class="card-body p-2 p-md-0">
                <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                <div class="d-block d-md-none">
                    <p>@Html.DisplayFor(model => model.Price)</p>
                    <a class="btn btn-green w-100 input-with-green-outline-on-focus" asp-action="Details" asp-route-id="@Model.ProductId">Details</a>
                </div>
            </div>
        </div>
        <div class="d-none d-md-flex col-md-2 flex-column justify-content-between align-items-center">
            <h5>@Html.DisplayFor(model => model.Price)</h5>
            <a class="btn btn-green w-100 input-with-green-outline-on-focus" asp-action="Details" asp-route-id="@Model.ProductId">Details</a>
        </div>
    </div>
</div>
