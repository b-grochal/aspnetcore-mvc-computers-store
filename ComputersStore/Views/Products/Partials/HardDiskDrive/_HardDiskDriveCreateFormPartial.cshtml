@model HardDiskDriveCreateFormViewModel

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ProductCategoryId" hidden>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control input-with-green-outline-on-focus" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control input-with-green-outline-on-focus" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control input-with-green-outline-on-focus" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Capacity" class="control-label"></label>
            <input asp-for="Capacity" class="form-control input-with-green-outline-on-focus">
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="RotationSpeed" class="control-label"></label>
            <input asp-for="RotationSpeed" class="form-control input-with-green-outline-on-focus">
            <span asp-validation-for="RotationSpeed" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="CacheSize" class="control-label"></label>
            <input asp-for="CacheSize" class="form-control input-with-green-outline-on-focus">
            <span asp-validation-for="CacheSize" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Interface" class="control-label"></label>
            <input asp-for="Interface" class="form-control input-with-green-outline-on-focus">
            <span asp-validation-for="Interface" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="IsRecommended" class="control-label"></label>
            <select asp-for="IsRecommended" class="form-control input-with-green-outline-on-focus">
                <option value="false" selected>No</option>
                <option value="true">Yes</option>
            </select>
            <span asp-validation-for="IsRecommended" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" type="file" class="form-control-file file-input-with-green-outline-on-focus">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group d-flex justify-content-end">
        <input type="submit" value="Save" class="btn btn-green" />
        <a class="btn btn-green ml-2" asp-controller="Products" asp-action="Create">Cancel</a>
    </div>
</form>