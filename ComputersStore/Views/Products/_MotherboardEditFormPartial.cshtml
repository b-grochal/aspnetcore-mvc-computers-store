@model ComputersStore.Models.ViewModels.Basic.EditProductViewModel

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId" />
    <select asp-for="ProductCategory" asp-items="Html.GetEnumSelectList<ProductCategory>()" class="form-control" hidden></select>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FormFactor" class="control-label"></label>
        <input asp-for="FormFactor" class="form-control">
        <span asp-validation-for="FormFactor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CpuSocket" class="control-label"></label>
        <input asp-for="CpuSocket" class="form-control">
        <span asp-validation-for="CpuSocket" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Chipset" class="control-label"></label>
        <input asp-for="Chipset" class="form-control">
        <span asp-validation-for="Chipset" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MemoryType" class="control-label"></label>
        <input asp-for="MemoryType" class="form-control">
        <span asp-validation-for="MemoryType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MemoryChannel" class="control-label"></label>
        <input asp-for="MemoryChannel" class="form-control">
        <span asp-validation-for="MemoryChannel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SataSupport" class="control-label"></label>
        <input asp-for="SataSupport" class="form-control">
        <span asp-validation-for="SataSupport" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <input asp-for="ImageFile" type="file" class="form-control-file">
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>