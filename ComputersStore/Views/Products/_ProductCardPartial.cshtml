@model ProductDetailsViewModel

<div class="card">
    <div class="row no-gutters">
        <div class="col-2 p-2">
            <img class="card-img-top img-fluid" src="@Model.ImageDataUrl" />
        </div>
        <div class="col-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
        <div class="col-2 d-flex flex-column justify-content-between align-items-center">
            <h5>@Model.Price</h5>
            <a class="btn btn-primary w-100" asp-action="Details" asp-route-id="@Model.ProductId">Details</a>
        </div>
    </div>
</div>
