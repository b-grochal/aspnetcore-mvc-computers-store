@model ProductCreateFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h3>Create @Model.ProductCategoryName</h3>
<hr />
@switch (Model.ProductCategoryId)
{
    case ProductCategoryDictionary.CPU:
        <partial name="~/Views/Products/Partials/_CentralProcessingUnitCreateFormPartial.cshtml" for="@Model" />
        break;
    case ProductCategoryDictionary.Motherboard:
        <partial name="~/Views/Products/Partials/_MotherboardCreateFormPartial.cshtml" for="@Model" />
        break;
    case ProductCategoryDictionary.RAM:
        <partial name="~/Views/Products/Partials/_RandomAccessMemoryCreateFormPartial.cshtml" for="@Model" />
        break;
    case ProductCategoryDictionary.GPU:
        <partial name="~/Views/Products/Partials/_GraphicsProcessingUnitCreateFormPartial.cshtml" for="@Model" />
        break;
    case ProductCategoryDictionary.PSU:
        <partial name="~/Views/Products/Partials/_PowerSupplyUnitCreateFormPartial.cshtml" for="@Model" />
        break;
    case ProductCategoryDictionary.HDD:
        <partial name="~/Views/Products/Partials/_HardDiskDriveCreateFormPartial.cshtml" for="@Model" />
        break;
    case ProductCategoryDictionary.SSD:
        <partial name="~/Views/Products/Partials/_SolidStateDriveCreateFormPartial.cshtml" for="@Model" />
        break;
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
