@model ComputersStore.Models.ViewModels.Basic.ProductCreateFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @switch (Model.ProductCategory)
        {
            case ProductCategory.CPU:
                @await Html.PartialAsync("_CentralProcessingUnitCreateFormPartial", Model);
                break;
            case ProductCategory.Motherboard:
                @await Html.PartialAsync("_MotherboardCreateFormPartial", Model);
                break;
            case ProductCategory.RAM:
                @await Html.PartialAsync("_RandomAccessMemoryCreateFormPartial", Model);
                break;
            case ProductCategory.GPU:
                @await Html.PartialAsync("_GraphicsProcessingUnitCreateFormPartial", Model);
                break;
            case ProductCategory.PSU:
                @await Html.PartialAsync("_PowerSupplyUnitCreateFormPartial", Model);
                break;
            case ProductCategory.HDD:
                @await Html.PartialAsync("_HardDiskDriveCreateFormPartial", Model);
                break;
            case ProductCategory.SSD:
                @await Html.PartialAsync("_SolidStateDriveCreateFormPartial", Model);
                break;
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
