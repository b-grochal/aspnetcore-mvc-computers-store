@model ComputersStore.Models.ViewModels.Basic.ProductDetailsViewModel

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId" />
    <select asp-for="ProductCategory" asp-items="Html.GetEnumSelectList<ProductCategory>()" class="form-control" hidden></select>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control">
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RotationSpeed" class="control-label"></label>
        <input asp-for="RotationSpeed" class="form-control">
        <span asp-validation-for="RotationSpeed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CacheSize" class="control-label"></label>
        <input asp-for="CacheSize" class="form-control">
        <span asp-validation-for="CacheSize" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Interface" class="control-label"></label>
        <input asp-for="Interface" class="form-control">
        <span asp-validation-for="Interface" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>