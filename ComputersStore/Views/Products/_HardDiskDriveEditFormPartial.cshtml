@model ComputersStore.Models.ViewModels.Basic.ProductEditFormViewModel

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ProductId" type="hidden" />
    <input asp-for="Image" type="hidden"/>
    <select asp-for="ProductCategory" asp-items="Html.GetEnumSelectList<ProductCategory>()" class="form-control" hidden></select>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Capacity" class="control-label"></label>
            <input asp-for="Capacity" class="form-control">
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="RotationSpeed" class="control-label"></label>
            <input asp-for="RotationSpeed" class="form-control">
            <span asp-validation-for="RotationSpeed" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="CacheSize" class="control-label"></label>
            <input asp-for="CacheSize" class="form-control">
            <span asp-validation-for="CacheSize" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Interface" class="control-label"></label>
            <input asp-for="Interface" class="form-control">
            <span asp-validation-for="Interface" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="IsImageUpdated" class="control-label"></label>
            <select asp-for="IsImageUpdated" class="form-control" onchange="enableImageInputOnSelectChange(this)">
                <option value="false" selected>No</option>
                <option value="true">Yes</option>
            </select>
            <span asp-validation-for="IsImageUpdated" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" id="imageFile" type="file" class="form-control-file" disabled>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>