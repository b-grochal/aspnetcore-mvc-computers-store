@model ApplicationUsersCollectionViewModel
@{
    ViewData["Title"] = "Table";
}

<div class="row">
    <div class="col-12 d-flex justify-content-between align-content-center">
        <h3 class="mb-0">Admins' table</h3>
        <button class="btn btn-green" data-toggle="collapse" data-target="#newslettersTableFilters" aria-expanded="false" aria-controls="newslettersTableFilters">Filter</button>
    </div>
</div>
<div class="row mt-3 collapse" id="newslettersTableFilters">
    <div class="col-12">
        <form asp-controller="ApplicationUsers" asp-action="Admins">
            <div class="form-row">
                <div class="form-group col-md-4 d-flex justify-content-start align-items-center mb-0">
                    <input name="FirstName" class="form-control" placeholder="First name" value="@Model.applicationUserSearchCriteria.FirstName" />
                </div>
                <div class="form-group col-md-4 d-flex justify-content-start align-items-center mb-0">
                    <input name="LastName" class="form-control" placeholder="Last name" value="@Model.applicationUserSearchCriteria.LastName" />
                </div>
                <div class="form-group col-md-4 d-flex justify-content-start align-items-center mb-0">
                    <input name="Email" class="form-control" placeholder="Email" value="@Model.applicationUserSearchCriteria.Email" />
                </div>
            </div>
            <div class="form-row mt-2">
                <div class="form-group col-md-4 d-flex justify-content-start align-items-center mb-0">
                    <input name="PhoneNumber" class="form-control" placeholder="Phone number" value="@Model.applicationUserSearchCriteria.PhoneNumber" />
                </div>
                <div class="form-group col-md-8 d-flex justify-content-end align-items-center mb-0">
                    <input type="submit" value="Search" class="btn btn-green mr-2" />
                    <input type="reset" value="Clear" class="btn btn-green">
                </div>
            </div>
        </form>
    </div>
</div>
<hr class="my-2" />
<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone number</th>
                        <th scope="col" class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var applicationUser in Model.applicationUsers)
                    {
                        <tr>
                            <td scope="col">@applicationUser.FirstName</td>
                            <td scope="col">@applicationUser.LastName</td>
                            <td scope="col">@applicationUser.Email</td>
                            <td scope="col">@applicationUser.PhoneNumber</td>
                            <td scope="col" class="text-right">
                                <a class="btn btn-sm btn-green mr-2" asp-controller="ApplicationUsers" asp-action="Details" asp-route-id="@applicationUser.ApplicationUserId">Details</a>
                                <btn class="btn btn-sm btn-green modalButton"
                                     type="button"
                                     data-toggle="ajax-modal"
                                     data-target="#deleteApplicationUser"
                                     data-url="@Url.Action("Delete", "ApplicationUsers", new { applicationUserId = applicationUser.ApplicationUserId })">
                                    Delete
                                </btn>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        @if (Model.PaginationViewModel.TotalPages > 1)
        {
            <pagination-links pagination-view-model="@Model.PaginationViewModel" page-action="Table" links-container-class="btn-group float-right m-1" page-classes-enabled="true"
                              page-class="btn" page-class-normal="btn-black" page-class-selected="btn-green" page-url-firstName="@Model.applicationUserSearchCriteria.FirstName"
                              page-url-lastName="@Model.applicationUserSearchCriteria.LastName" page-url-email="@Model.applicationUserSearchCriteria.Email" 
                              page-url-phoneNumber="@Model.applicationUserSearchCriteria.PhoneNumber">
            </pagination-links>
        }
    </div>
</div>



