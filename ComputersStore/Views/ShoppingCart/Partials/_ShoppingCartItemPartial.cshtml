@model ShoppingCartItemViewModel

<div class="row border-bottom mb-1 no-gutters">
    <div class="col-6 d-flex justify-content-start align-items-center">
        <p class="m-0">@Model.ProductName</p>
    </div>
    <div class="col-2 d-flex justify-content-start align-items-center">
        <p class="m-0">Quantity: @Model.Quantity</p>
    </div>
    <div class="col-2 d-flex justify-content-start align-items-center">
        <p class="m-0">Price: @Model.ProductPrice</p>
    </div>
    <div class="col-2 d-flex justify-content-end align-items-center">
        <form asp-controller="ShoppingCart" asp-action="RemoveProductFromShoppingCart" type="post">
            <input hidden asp-for="ProductId" />
            <button type="submit" class="btn btn-sm btn-green mb-1">Remove</button>
        </form>
    </div>
</div>