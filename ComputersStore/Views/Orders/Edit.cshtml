@model OrderEditFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit order</h3>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="OrderId" class="control-label"></label>
            <input asp-for="OrderId" class="form-control" disabled />
            <span asp-validation-for="OrderId" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="ApplicationUserEmail" class="control-label"></label>
            <input asp-for="ApplicationUserEmail" class="form-control" disabled />
            <span asp-validation-for="ApplicationUserEmail" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="OrderDate" class="control-label"></label>
            <input asp-for="OrderDate" class="form-control input-with-green-outline-on-focus" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12 col-md-4">
            <label asp-for="ShipAddress" class="control-label"></label>
            <input asp-for="ShipAddress" class="form-control input-with-green-outline-on-focus" />
            <span asp-validation-for="ShipAddress" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="ShipCity" class="control-label"></label>
            <input asp-for="ShipCity" class="form-control input-with-green-outline-on-focus" />
            <span asp-validation-for="ShipCity" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="ShipPostalCode" class="control-label"></label>
            <input asp-for="ShipPostalCode" class="form-control input-with-green-outline-on-focus" />
            <span asp-validation-for="ShipPostalCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12 col-md-4">
            <label asp-for="ShipCountry" class="control-label"></label>
            <input asp-for="ShipCountry" class="form-control input-with-green-outline-on-focus" />
            <span asp-validation-for="ShipCountry" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="OrderStatusId" class="control-label"></label>
            <select asp-for="OrderStatusId" class="form-control input-with-green-outline-on-focus" asp-items="ViewBag.OrderStatuses"></select>
            <span asp-validation-for="OrderStatusId" class="text-danger"></span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label asp-for="PaymentTypeId" class="control-label"></label>
            <select asp-for="PaymentTypeId" class="form-control input-with-green-outline-on-focus" asp-items="ViewBag.PaymentTypes"></select>
            <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group d-flex justify-content-end">
        <input type="submit" value="Save" class="btn btn-green input-with-green-outline-on-focus" />
        <a class="btn btn-green ml-2 input-with-green-outline-on-focus" asp-controller="Orders" asp-action="Table">Cancel</a>
    </div>
</form>
