@{
    ViewData["Title"] = "Home Page";
}

<div class="row mb-4">
    <div class="col">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/images/nvidia.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/intel.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/images/amd.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<hr class="my-4"/>
<div class="row mb-4">
    <div class="col-12">
        @await Component.InvokeAsync("RecommendedProducts")
    </div>
</div>
<hr class="my-4"/>
<div class="row">
    <div class="col-12 d-flex flex-column align-items-center">
        <h4 class="mb-4 text-center">Newsletter</h4>
        <p class="text-center">Sign up for our newsletter to stay updated on all newly released products or daily specials.</p>
        <a class="btn btn-black input-with-green-outline-on-focus text-white" asp-controller="Newsletters" asp-action="SignUpForNewsletter">Sign up</a>
    </div>
</div>
