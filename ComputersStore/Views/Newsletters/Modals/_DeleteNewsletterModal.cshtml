@model NewsletterViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="modal" id="deleteNewsletter" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete newsletter</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>  
            <div class="modal-body">
                <p>Are you sure you want to delete @Model.Email form newsletters?</p>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="NewsletterId" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-green input-with-green-outline-on-focus" data-save="modal">Delete</button>
                <button type="button" class="btn btn-secondary input-with-green-outline-on-focus" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>