@model NewslettersTableViewModel
@{
    ViewData["Title"] = "Table";
}

<div class="row">
    <div class="col-12 d-flex justify-content-between align-content-center">
        <h3 class="mb-0">Newsletters' table</h3>
        <button class="btn btn-green" data-toggle="collapse" data-target="#newslettersTableFilters" aria-expanded="false" aria-controls="newslettersTableFilters">Filter</button>
    </div>
</div>
<div class="row pt-3 collapse" id="newslettersTableFilters">
    <div class="col-12">
        <form asp-controller="Newsletters" asp-action="Table">
            <div class="form-row">
                <div class="form-group col-md-4 d-flex justify-content-start align-items-center mb-0">
                    <input name="NewsletterId" class="form-control" placeholder="Id" type="number" value="@Model.newslettersCollectionSearchCritera.NewsletterId" />
                </div>
                <div class="form-group col-md-4 d-flex justify-content-start align-items-center mb-0">
                    <input name="NewsletterEmail" class="form-control" placeholder="Email" value="@Model.newslettersCollectionSearchCritera.NewsletterEmail" />
                </div>
                <div class="form-group col-md-4 d-flex justify-content-end align-items-center mb-0">
                    <input type="submit" value="Search" class="btn btn-green mr-2" />
                    <input type="reset" value="Clear" class="btn btn-green">
                </div>
            </div>
        </form>
    </div>
</div>
<hr class="my-2" />
<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var newsletter in Model.Newsletters)
                    {
                        <tr>
                            <td scope="col">@newsletter.NewsletterId</td>
                            <td scope="col">@newsletter.Email</td>
                            <td scope="col" class="text-right">
                                <btn class="btn btn-sm btn-green modalButton"
                                     type="button"
                                     data-toggle="ajax-modal" 
                                     data-target="#deleteNewsletter" 
                                     data-url="@Url.Action("Delete", "Newsletters", new { id = newsletter.NewsletterId })">
                                    Delete
                                </btn>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        @if (Model.PaginationViewModel.TotalPages > 1)
        {
            <pagination-links pagination-view-model="@Model.PaginationViewModel" page-action="Table" links-container-class="btn-group float-right m-1" page-classes-enabled="true"
                              page-class="btn" page-class-normal="btn-black" page-class-selected="btn-green" page-url-newsletterId="@Model.newslettersCollectionSearchCritera.NewsletterId" 
                              page-url-newsletterEmail="@Model.newslettersCollectionSearchCritera.NewsletterEmail">
            </pagination-links>
        }
    </div>
</div>



